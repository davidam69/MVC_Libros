@model MVC_Libros.Models.Autor

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estilos.css" />
}

<div class="crear-autor-bg">
    <h2 class="text-azul-sombra mb-4">Crear Autor</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Crear Autor" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">volver listado de autores</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
