@model MVC_Libros.Models.Autor

@{
    ViewData["Title"] = "Details";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Detalles del autor</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 h4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10 h4">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>

@if (Model.Libros != null && Model.Libros.Any())
{
    <ul class="list-group">
        @foreach (var libro in Model.Libros)
        {
            <li class="list-group-item">
                <strong>@libro.Titulo</strong> (@libro.AnioPublicacion)
                <a asp-action="Details" asp-controller="Libros" asp-route-id="@libro.Id" class="btn btn-primary btn-sm">
                    <i class="bi bi-eye"></i> Ver
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>Este autor todavía no tiene libros cargados.</p>
}
