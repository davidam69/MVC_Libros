@model MVC_Libros.Models.Autor

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Autor</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <!-- Botón Eliminar con ícono -->
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('¿Estás seguro que quieres eliminar este autor?');">
            <i class="bi bi-trash"></i> Eliminar Autor
        </button>

        <!-- Botón Volver con ícono -->
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista de autores
        </a>
    </form>
</div>
