@model MVC_Libros.Models.Libro

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Libro</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Año de Publicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnioPublicacion)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Portada
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(@Model.UrlImagen))
            {
                <img src="@Model.UrlImagen" alt="Imagen de @Model.Titulo" style="max-height:150px;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <!-- Botón Eliminar con ícono -->
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('¿Estás seguro que quieres eliminar este libro?');">
            <i class="bi bi-trash"></i> Eliminar Libro
        </button>

        <!-- Botón Volver con ícono -->
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al catálogo
        </a>
    </form>
</div>
